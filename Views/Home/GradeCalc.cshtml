@{
    ViewBag.Title = "Grade Calculator";
}

@model GradeCalcModel

<body>
    <div class="center">
        <h1>@ViewBag.Title</h1>
        <form>
            <label>Assignments:</label>
            <input id="assignments" asp-for="Assignments" /><br />
            <br />
            <label>Group Projects:</label>
            <input id="groupProjects" asp-for="GroupProjects" /><br />
            <br />
            <label>Quizzes:</label>
            <input id="quizzes" asp-for="Quizzes" /><br />
            <br />
            <label>Exams:</label>
            <input id="exams" asp-for="Exams" /><br />
            <br />
            <label>INTEX:</label>
            <input id="intex" asp-for="Intex" /><br />
            <br />
            <input type="submit" value="Submit" id="submitButton" />
            <div asp-validation-summary="All"></div>
        </form>
        <br />
    </div>
    <br />
    <br />
</body>